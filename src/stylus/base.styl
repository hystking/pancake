//
// Import Mixins
//

@require "mixin/*"

//
// Global Reset
//

global-reset()

//
// Wrapper Style
//

.{meta.slug}
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-family: s(font.gothic)
  font-size: 16px
  line-height: 1
  color: #000
  &, *
    box-sizing: border-box

a
  color: inherit
